const ejs = require('ejs');

<!DOCTYPE html>
<html>
  <head>
    <title><%= Welcome to the Tour Info App %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <form method="POST">
      <legend>Reset Password</legend>
      <div class="form-group">
        <label for="password"><%= New Password %></label>
        <input class="form-control" type="password" name="password" value="" placeholder="New password" autofocus>
      </div>
      <div class="form-group">
        <label for="confirm"><%= Confirm Password %></label>
        <input class="form-control" type="password" name="confirmPassword" value="" placeholder="Confirm password">
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit"><%= Update Password %></button>
      </div>
    </form>
  </body>
</html>